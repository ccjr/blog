<%= div_for comment do %>
  <h3>
    <%= comment.name %> &lt;<%= comment.email %>&gt; said:
    <% if @article.owned_by? current_user %>
      <span class='actions'>
        <%= link_to t('general.delete'), [@article, comment], :confirm => t('general.are_you_sure'), :method => :delete, :remote => true %>
      </span>
    <% end %>
  </h3>
  <%= comment.body %>
<% end %>